{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Javascript Debug",
            "type": "chrome",
            "request": "launch",
            "url": "${config:web.server.url}",
            "userDataDir": "${workspaceFolder}\\.vscode\\chrome-user-data",
            "env": {
                "DEBUG_MODE": true
            }
        },
        {
            "name": "PHP Listener",
            "type": "php",
            "request": "launch",
            "hostname": "localhost",
            "port": 9001,
            "log": false,
            "pathMappings": {
                "/var/www/html/app": "${workspaceRoot}/src/app",
                "/var/www/html/route": "${workspaceRoot}/src/route",
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ],
    "compounds": [
        {
            "name": "PHP DEBUG",
            "configurations": [
                "PHP Listener",
                "Javascript Debug"
            ]
        }
    ]
}